{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "allowJs": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true,
        "declaration": true,
        "strict": true
    },
    "filesGlob": [
        "*.ts"
    ],
    "include": [
        "src",
    ],
    "compileOnSave": true
}